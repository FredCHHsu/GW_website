<h1 class="text-center">新增訂單</h1>
<div class="col-md-4 col-md-offset-4">
	<%= simple_form_for [@meal, @reservation] do |f| %>
	<%= f.input :amount, :input_html => { :class => "form-control" } %>
	<%= f.input :contact_name, :input_html => { :class => "form-control" } %>
	<%= f.input :contact_mail, :input_html => { :class => "form-control" } %>
	<%= f.input :contact_phone, as: :string, :input_html => { :class => "form-control" } %>
	<hr>
	<div class="form-actions">
		<%= f.submit "馬上預約！", :disable_with => '處理中...', :class => "btn btn-primary"%>
	</div>
	<% end %>
</div>